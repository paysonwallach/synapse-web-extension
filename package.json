{
  "name": "synapse-firefox",
  "description": "Firefox addon for Synapse",
  "license": "GPL-3.0",
  "author": "payson@paysonwallach.com",
  "version": "0.1.0",
  "scripts": {
    "build": "webpack",
    "format": "run-p format:*",
    "format:js": "prettier --write .",
    "format:package.json": "prettier-package-json --write",
    "prerelease": "scrivano",
    "release": "standard-version"
  },
  "dependencies": {
    "object-sizeof": "^1.6.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "husky": "^4.3.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.1.2",
    "scrivano": "^0.1.0",
    "standard-version": "^9.0.0",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "npm run format"
    }
  },
  "standard-version": {
    "scripts": {
      "precommit": "npm run prerelease"
    }
  }
}
